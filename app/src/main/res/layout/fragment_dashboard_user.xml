<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        
    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <FrameLayout
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:id="@+id/user_cardview_carpenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_marginTop="12dp"
                            android:background="@drawable/bgb_circle"
                            android:layout_width="96dp"
                            android:layout_height="96dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:src="@drawable/hacksaw"
                                android:tint="@color/colorAccent"/>
                        </FrameLayout>
                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/colorScondaryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="اعمال نجارة"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:padding="12dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/user_cardview_mech"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:layout_marginTop="12dp"
                            android:backgroundTint="#1fc9b4"
                            android:layout_gravity="center"
                            android:background="@drawable/bgb_circle"
                            android:layout_width="96dp"
                            android:layout_height="96dp">
                            <ImageView
                                android:adjustViewBounds="true"
                                android:layout_gravity="center"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/mechanic"
                                android:tint="@color/colorAccent"/>
                        </FrameLayout>
                        <TextView
                            android:layout_gravity="center"

                            android:textColor="@color/colorScondaryText"
                            android:layout_marginTop="4dp"
                            android:id="@+id/textview_mech"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mechanics"
                            android:textSize="18sp"/>
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <FrameLayout
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/user_cardview_plumber"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_marginTop="12dp"
                            android:backgroundTint="#4ee0cb"
                            android:layout_gravity="center"
                            android:background="@drawable/bgb_circle"
                            android:layout_width="96dp"
                            android:layout_height="96dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:src="@drawable/plumber"
                                android:tint="@color/colorAccent"/>
                        </FrameLayout>
                        <TextView
                            android:layout_gravity="center"
                            android:textColor="@color/colorScondaryText"
                            android:id="@+id/textview_plumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="اعمال سباكة"
                            android:textSize="18sp"/>
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:padding="12dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/user_cardview_electricity"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_marginTop="12dp"
                            android:backgroundTint="#12d0bf"
                            android:layout_gravity="center"
                            android:background="@drawable/bgb_circle"
                            android:layout_width="96dp"
                            android:layout_height="96dp">
                            <ImageView
                                android:adjustViewBounds="true"
                                android:layout_gravity="center"
                                android:layout_width="72dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/electricity"
                                android:tint="@color/colorAccent"/>
                        </FrameLayout>
                        <TextView
                            android:layout_gravity="center"
                            android:textColor="@color/colorScondaryText"
                            android:layout_marginTop="4dp"
                            android:id="@+id/textview_electricity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="اعمال كهربائية"
                            android:textSize="18sp"/>
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <FrameLayout
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/user_cardview_n2ash"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_marginTop="12dp"
                            android:backgroundTint="#44d5ac"
                            android:layout_gravity="center"
                            android:background="@drawable/bgb_circle"
                            android:layout_width="96dp"
                            android:layout_height="96dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:src="@drawable/paintingroller"
                                android:tint="@color/colorAccent"/>
                        </FrameLayout>
                        <TextView
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center"
                            android:textColor="@color/colorScondaryText"
                            android:id="@+id/textview_n2ash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="اعمال نقاشة"
                            android:textSize="18sp"/>
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:padding="12dp"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/user_cardview_tblit"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_marginTop="12dp"
                            android:backgroundTint="#42c5a0"
                            android:layout_gravity="center"
                            android:background="@drawable/bgb_circle"
                            android:layout_width="96dp"
                            android:layout_height="96dp">
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/plasterer"
                                android:tint="@color/colorAccent"/>
                        </FrameLayout>
                        <TextView
                            android:layout_marginTop="4dp"
                            android:textColor="@color/colorScondaryText"
                            android:layout_gravity="center"
                            android:id="@+id/textview_tblit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="اعمال تبليط"
                            android:textSize="18sp"/>
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
    
    <FrameLayout
        android:elevation="4dp"
        android:id="@+id/layout_dashboard"
        android:background="@color/scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
     >
        <android.support.v7.widget.CardView
            android:elevation="3dp"
            app:cardCornerRadius="6dp"
            android:layout_margin="24dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

           >
            <LinearLayout
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="الخدمة"
                    android:textSize="18sp"
                    android:textColor="@color/colorScondaryText"/>
                <FrameLayout
                    android:layout_margin="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:id="@+id/add_img"
                        android:background="@drawable/dash_rec"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:minHeight="196dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:tint="@color/colorScondaryText"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_add_a_photo_white_48dp"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </FrameLayout>
                    <ImageView
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:id="@+id/picked_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <TextView
                    android:layout_marginLeft="24dp"
                    android:visibility="gone"
                    android:id="@+id/img_err"
                    android:textColor="#B33A3A"
                    android:text="@string/cant_be_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/desc_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/desc_input"
                        android:hint="تفاصيل الخدمة"
                        android:textColorHint="@color/colorScondaryText"/>
                </android.support.design.widget.TextInputLayout>


              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_gravity="left">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الغاء"
                    android:id="@+id/cancel_btn"
                    android:textColor="@color/black"/>
                  <Button
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/black"
                      android:id="@+id/send_btn"
                      android:text="ارسال"/>
              </LinearLayout>
        </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>


    <FrameLayout
        android:elevation="4dp"
        android:id="@+id/progressBarView"
        android:visibility="gone"
        android:background="#2A000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            app:contentPaddingLeft="@dimen/padding_normal"
            app:contentPaddingTop="@dimen/padding_dialog"
            app:contentPaddingRight="@dimen/padding_dialog"
            app:contentPaddingBottom="@dimen/padding_normal"
            android:layout_gravity="center"
            app:cardBackgroundColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/txtPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:textSize="30dp" />

            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="35dp"
                android:visibility="gone"/>
        </android.support.v7.widget.CardView>
    </FrameLayout>

    <FrameLayout
        android:visibility="gone"
        android:clickable="true"
        android:id="@+id/loadingSpinner"
        android:elevation="12dp"
        android:background="@color/scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </FrameLayout>
</FrameLayout>